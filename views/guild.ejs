<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= guild.name %> - Settings</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      color: white;
    }

    .navbar {
      background: rgba(0, 0, 0, 0.3);
      backdrop-filter: blur(10px);
      padding: 1rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .logo { font-size: 1.5rem; font-weight: bold; }
    .user-info { display: flex; align-items: center; gap: 1rem; }
    .user-avatar { width: 40px; height: 40px; border-radius: 50%; border: 2px solid white; }

    .btn {
      padding: 0.75rem 1.5rem;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1rem;
      font-weight: 600;
      text-decoration: none;
      transition: all 0.3s;
      display: inline-block;
      background: rgba(255, 255, 255, 0.2);
      color: white;
      border: 2px solid rgba(255, 255, 255, 0.3);
    }

    .btn:hover {
      background: rgba(255, 255, 255, 0.3);
      transform: translateY(-2px);
    }

    .btn-primary {
      background: #5865F2;
      border-color: #5865F2;
    }

    .btn-primary:hover {
      background: #4752C4;
      box-shadow: 0 6px 12px rgba(88, 101, 242, 0.4);
    }

    .container {
      max-width: 1200px;
      margin: 2rem auto;
      padding: 0 2rem;
    }

    .guild-header {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border-radius: 16px;
      padding: 2rem;
      margin-bottom: 2rem;
      border: 2px solid rgba(255, 255, 255, 0.2);
      display: flex;
      align-items: center;
      gap: 1.5rem;
    }

    .guild-icon {
      width: 80px;
      height: 80px;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.2);
      overflow: hidden;
    }

    .guild-icon img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .guild-info h1 {
      font-size: 2rem;
      margin-bottom: 0.5rem;
    }

    .guild-stats {
      display: flex;
      gap: 2rem;
      opacity: 0.9;
    }

    .settings-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
      gap: 1.5rem;
    }

    .setting-card {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border-radius: 16px;
      padding: 1.5rem;
      border: 2px solid rgba(255, 255, 255, 0.2);
    }

    .setting-card h3 {
      font-size: 1.3rem;
      margin-bottom: 0.5rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .setting-card p {
      opacity: 0.8;
      margin-bottom: 1rem;
      line-height: 1.5;
    }

    .setting-control {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0.75rem;
      background: rgba(0, 0, 0, 0.2);
      border-radius: 8px;
      margin-bottom: 0.75rem;
    }

    .setting-control:last-child {
      margin-bottom: 0;
    }

    .toggle-switch {
      position: relative;
      width: 50px;
      height: 26px;
      background: rgba(255, 255, 255, 0.2);
      border-radius: 13px;
      cursor: pointer;
      transition: 0.3s;
    }

    .toggle-switch.active {
      background: #57F287;
    }

    .toggle-switch::after {
      content: '';
      position: absolute;
      width: 20px;
      height: 20px;
      border-radius: 50%;
      background: white;
      top: 3px;
      left: 3px;
      transition: 0.3s;
    }

    .toggle-switch.active::after {
      left: 27px;
    }

    .input-field {
      width: 100%;
      padding: 0.75rem;
      border: 2px solid rgba(255, 255, 255, 0.3);
      border-radius: 8px;
      background: rgba(0, 0, 0, 0.2);
      color: white;
      font-size: 1rem;
      margin-top: 0.5rem;
    }

    .input-field:focus {
      outline: none;
      border-color: #5865F2;
    }

    .save-button {
      width: 100%;
      padding: 1rem;
      margin-top: 2rem;
      font-size: 1.1rem;
    }

    .notification {
      position: fixed;
      top: 20px;
      right: 20px;
      padding: 1rem 1.5rem;
      background: rgba(87, 242, 135, 0.9);
      border-radius: 8px;
      color: white;
      font-weight: 600;
      display: none;
      animation: slideIn 0.3s;
    }

    .notification.error {
      background: rgba(237, 66, 69, 0.9);
    }

    @keyframes slideIn {
      from {
        transform: translateX(400px);
        opacity: 0;
      }
      to {
        transform: translateX(0);
        opacity: 1;
      }
    }
  </style>
</head>
<body>
  <nav class="navbar">
    <div class="logo">ü§ñ Discord Hosei BOT</div>
    <div class="user-info">
      <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" 
           alt="Avatar" class="user-avatar">
      <span><%= user.username %></span>
      <a href="/dashboard" class="btn">‚Üê Back to Dashboard</a>
      <a href="/logout" class="btn">Logout</a>
    </div>
  </nav>

  <div class="container">
    <div class="guild-header">
      <div class="guild-icon">
        <% if (guild.icon) { %>
          <img src="<%= guild.iconURL() %>" alt="<%= guild.name %>">
        <% } else { %>
          üè†
        <% } %>
      </div>
      <div class="guild-info">
        <h1><%= guild.name %></h1>
        <div class="guild-stats">
          <span>üë• <%= guild.memberCount %> Members</span>
          <span>üìù <%= guild.channels.cache.size %> Channels</span>
          <span>üé≠ <%= guild.roles.cache.size %> Roles</span>
        </div>
      </div>
    </div>

    <form id="settingsForm">
      <div class="settings-grid">
        <!-- Basic Settings -->
        <div class="setting-card">
          <h3>‚öôÔ∏è Basic Settings</h3>
          <p>Configure bot prefix and general settings</p>
          
          <div class="setting-control">
            <label>Command Prefix</label>
            <input type="text" name="prefix" value="<%= settings.prefix %>" 
                   class="input-field" style="width: 100px;" maxlength="5">
          </div>
        </div>

        <!-- Music System -->
        <div class="setting-card">
          <h3>üéµ Music System</h3>
          <p>Enable high-quality music playback</p>
          
          <div class="setting-control">
            <label>Enable Music</label>
            <div class="toggle-switch <%= settings.musicEnabled ? 'active' : '' %>" 
                 data-setting="musicEnabled"></div>
          </div>
        </div>

        <!-- Leveling System -->
        <div class="setting-card">
          <h3>üìä Leveling System</h3>
          <p>Track member activity with XP and levels</p>
          
          <div class="setting-control">
            <label>Enable Leveling</label>
            <div class="toggle-switch <%= settings.levelingEnabled ? 'active' : '' %>" 
                 data-setting="levelingEnabled"></div>
          </div>
        </div>

        <!-- Welcome System -->
        <div class="setting-card">
          <h3>üëã Welcome System</h3>
          <p>Greet new members with custom messages</p>
          
          <div class="setting-control">
            <label>Enable Welcome</label>
            <div class="toggle-switch <%= settings.welcomeEnabled ? 'active' : '' %>" 
                 data-setting="welcomeEnabled"></div>
          </div>
          
          <label style="margin-top: 1rem; display: block; opacity: 0.9;">Welcome Channel ID</label>
          <input type="text" name="welcomeChannel" 
                 value="<%= settings.welcomeChannel || '' %>" 
                 placeholder="Enter channel ID" class="input-field">
        </div>

        <!-- Verification System -->
        <div class="setting-card">
          <h3>üõ°Ô∏è Verification System</h3>
          <p>Protect your server from raids and bots</p>
          
          <div class="setting-control">
            <label>Enable Verification</label>
            <div class="toggle-switch <%= settings.verificationEnabled ? 'active' : '' %>" 
                 data-setting="verificationEnabled"></div>
          </div>
        </div>

        <!-- AI Chat -->
        <div class="setting-card">
          <h3>ü§ñ AI Chat</h3>
          <p>AI-powered conversations in channels</p>
          
          <div class="setting-control">
            <label>Enable AI Chat</label>
            <div class="toggle-switch <%= settings.aiChatEnabled ? 'active' : '' %>" 
                 data-setting="aiChatEnabled"></div>
          </div>
          
          <label style="margin-top: 1rem; display: block; opacity: 0.9;">AI Channels (comma-separated IDs)</label>
          <input type="text" name="aiChatChannels" 
                 value="<%= (settings.aiChatChannels || []).join(', ') %>" 
                 placeholder="123456,789012" class="input-field">
        </div>
      </div>

      <button type="submit" class="btn btn-primary save-button">
        üíæ Save Settings
      </button>
    </form>
  </div>

  <div id="notification" class="notification"></div>

  <script>
    // Toggle switches
    document.querySelectorAll('.toggle-switch').forEach(toggle => {
      toggle.addEventListener('click', function() {
        this.classList.toggle('active');
      });
    });

    // Save settings
    document.getElementById('settingsForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(e.target);
      const settings = {
        prefix: formData.get('prefix'),
        musicEnabled: document.querySelector('[data-setting="musicEnabled"]').classList.contains('active'),
        levelingEnabled: document.querySelector('[data-setting="levelingEnabled"]').classList.contains('active'),
        welcomeEnabled: document.querySelector('[data-setting="welcomeEnabled"]').classList.contains('active'),
        welcomeChannel: formData.get('welcomeChannel') || null,
        verificationEnabled: document.querySelector('[data-setting="verificationEnabled"]').classList.contains('active'),
        aiChatEnabled: document.querySelector('[data-setting="aiChatEnabled"]').classList.contains('active'),
        aiChatChannels: formData.get('aiChatChannels').split(',').map(id => id.trim()).filter(Boolean),
      };

      try {
        const response = await fetch('/api/guild/<%= guild.id %>/settings', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(settings)
        });

        const result = await response.json();
        
        if (response.ok) {
          showNotification('‚úÖ Settings saved successfully!', false);
        } else {
          showNotification('‚ùå Failed to save settings', true);
        }
      } catch (error) {
        showNotification('‚ùå Network error', true);
      }
    });

    function showNotification(message, isError) {
      const notification = document.getElementById('notification');
      notification.textContent = message;
      notification.className = 'notification' + (isError ? ' error' : '');
      notification.style.display = 'block';
      
      setTimeout(() => {
        notification.style.display = 'none';
      }, 3000);
    }
  </script>
</body>
</html>