<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - Hosei BOT</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
    
    * {
      font-family: 'Inter', sans-serif;
    }

    .gradient-bg {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .glass-effect {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .guild-card {
      transition: all 0.3s ease;
    }

    .guild-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate-fade-in {
      animation: fadeIn 0.5s ease-out;
    }
  </style>
</head>
<body class="gradient-bg min-h-screen text-white">
  <!-- Navbar -->
  <nav class="glass-effect sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex items-center space-x-3">
          <span class="text-2xl">ü§ñ</span>
          <span class="text-xl font-bold">Hosei BOT Dashboard</span>
        </div>
        
        <div class="flex items-center space-x-4">
          <div class="flex items-center space-x-3">
            <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" 
                 alt="Avatar" 
                 class="w-10 h-10 rounded-full border-2 border-white">
            <span class="font-medium"><%= user.username %></span>
          </div>
          <a href="/" 
             class="px-4 py-2 rounded-lg bg-white/20 hover:bg-white/30 transition-all">
            Home
          </a>
          <a href="/logout" 
             class="px-4 py-2 rounded-lg bg-red-500 hover:bg-red-600 transition-all">
            Logout
          </a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Welcome Section -->
    <div class="glass-effect rounded-2xl p-8 mb-8 animate-fade-in">
      <h1 class="text-4xl font-bold mb-2">üëã Welcome back, <%= user.username %>!</h1>
      <p class="text-lg opacity-90">Select a server below to manage bot settings and features</p>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8 animate-fade-in" style="animation-delay: 0.1s">
      <div class="glass-effect rounded-xl p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm opacity-80 mb-1">Total Servers</p>
            <p class="text-3xl font-bold"><%= guilds ? guilds.length : 0 %></p>
          </div>
          <div class="bg-blue-500/30 p-3 rounded-lg">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
        </div>
      </div>

      <div class="glass-effect rounded-xl p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm opacity-80 mb-1">Bot Active In</p>
            <p class="text-3xl font-bold">
              <%= guilds ? guilds.filter(g => client.guilds.cache.has(g.id)).length : 0 %>
            </p>
          </div>
          <div class="bg-green-500/30 p-3 rounded-lg">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
      </div>

      <div class="glass-effect rounded-xl p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm opacity-80 mb-1">Commands Available</p>
            <p class="text-3xl font-bold"><%= client.commands.size %></p>
          </div>
          <div class="bg-purple-500/30 p-3 rounded-lg">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Servers Section -->
    <div class="mb-6 animate-fade-in" style="animation-delay: 0.2s">
      <h2 class="text-2xl font-bold mb-2">üìã Your Servers</h2>
      <p class="text-sm opacity-80">Manage settings for servers where you have "Manage Server" permission</p>
    </div>

    <% if (guilds && guilds.length > 0) { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 animate-fade-in" style="animation-delay: 0.3s">
        <% guilds.forEach((guild, index) => { %>
          <% const botInGuild = client.guilds.cache.has(guild.id); %>
          <a href="/dashboard/<%= guild.id %>" 
             class="guild-card glass-effect rounded-xl p-6 block hover:border-white/40 transition-all"
             style="animation-delay: <%= 0.3 + (index * 0.05) %>s">
            <div class="flex items-start justify-between mb-4">
              <div class="flex items-center space-x-4">
                <div class="w-16 h-16 rounded-full overflow-hidden bg-white/20 flex items-center justify-center text-3xl flex-shrink-0">
                  <% if (guild.icon) { %>
                    <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png" 
                         alt="<%= guild.name %>"
                         class="w-full h-full object-cover">
                  <% } else { %>
                    üè†
                  <% } %>
                </div>
                <div class="flex-1 min-w-0">
                  <h3 class="text-lg font-bold truncate mb-1"><%= guild.name %></h3>
                  <p class="text-xs opacity-70 font-mono">ID: <%= guild.id %></p>
                </div>
              </div>
            </div>

            <div class="flex items-center justify-between">
              <% if (botInGuild) { %>
                <span class="px-3 py-1 rounded-full text-xs font-semibold bg-green-500/30 text-green-200 border border-green-500/50">
                  ‚úÖ Bot Active
                </span>
              <% } else { %>
                <span class="px-3 py-1 rounded-full text-xs font-semibold bg-red-500/30 text-red-200 border border-red-500/50">
                  ‚ùå Bot Not Added
                </span>
              <% } %>

              <div class="flex items-center space-x-2 text-sm opacity-70">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>

            <% if (!botInGuild) { %>
              <div class="mt-4 pt-4 border-t border-white/10">
                <a href="https://discord.com/api/oauth2/authorize?client_id=<%= client.user.id %>&permissions=8&scope=bot%20applications.commands&guild_id=<%= guild.id %>"
                   target="_blank"
                   onclick="event.stopPropagation()"
                   class="w-full py-2 px-4 bg-blue-500 hover:bg-blue-600 rounded-lg text-center text-sm font-semibold transition-all inline-block">
                  Invite Bot
                </a>
              </div>
            <% } %>
          </a>
        <% }); %>
      </div>
    <% } else { %>
      <div class="glass-effect rounded-2xl p-12 text-center animate-fade-in" style="animation-delay: 0.3s">
        <div class="text-6xl mb-4">üò¢</div>
        <h3 class="text-2xl font-bold mb-2">No Manageable Servers</h3>
        <p class="text-lg opacity-80 mb-6">You need "Manage Server" permission to configure the bot</p>
        <a href="https://discord.com/api/oauth2/authorize?client_id=<%= client.user.id %>&permissions=8&scope=bot%20applications.commands"
           target="_blank"
           class="inline-block px-6 py-3 bg-blue-500 hover:bg-blue-600 rounded-lg font-semibold transition-all">
          Invite Bot to Your Server
        </a>
      </div>
    <% } %>
  </div>

  <!-- Footer -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 mt-12">
    <div class="glass-effect rounded-xl p-6 text-center">
      <p class="opacity-80 mb-2">
        Made with ‚ù§Ô∏è by Discord Hosei BOT Team
      </p>
      <p class="text-sm opacity-60">
        Version 1.0.0 | <a href="#" class="hover:underline">Documentation</a> | <a href="#" class="hover:underline">Support</a>
      </p>
    </div>
  </div>
</body>
</html>